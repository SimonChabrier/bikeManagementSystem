{% extends 'base.html.twig' %}
{% block title %}Admin Vandalismes{% endblock %}

{% block body %}

<div class="container">
    <h1>affichage des vandalismes</h1>
    <h5>liste l'ensemble des vandalismes constatés</h5>
    <ul>
    {% for vandalism in vandalisms %}
        <li class='my-3 py-1 px-1 py-2 text-white bg-secondary'>N° {{ vandalism.id }} - le {{ vandalism.createdAt|date("d/m/Y") }}</li>
        <li class='mt-3'> {{ vandalism.content | slice(0, 100) ~ ' ...'  }}</li>
        <a href="{{ path('app_vandalism_show', {'id': vandalism.id}) }}"><li class='mt-2'>Détail</li></a>
        {# <li class='my-2'>le {{ vadalism.createdAt|date("d/m/Y") }}</li> #}
    {% endfor %}
    </ul>
</div>
{% endblock %}


