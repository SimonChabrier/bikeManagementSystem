{% extends 'base.html.twig' %}

{% block title %}Vandalism{% endblock %}

{% block body %}

<div class="container">
    <h1>Fiche Vandalisme - N° {{ vandalism.id }}</h1>
    <ul>

        <li class='my-3 py-1 px-1 py-2 text-white bg-secondary'>Constaté le {{ vandalism.createdAt|date("d/m/Y") }}</li>
        <li class='mt-3'><a href="{{ path('app_station_show', {'id': vandalism.station.id}) }}">Station {{ vandalism.station.name }}</a></li>
        <hr>
        <li class='mt-3'><a href="{{ path('app_bike_show', {'id': vandalism.bike.id}) }}">Vélo N° {{ vandalism.bike.number }}</a></li>
        <hr>
        <li class='mt-3'>Détail</li>
        <li class='my-4'> {{ vandalism.content }}</li>
        {% if vandalism.mainPicture %}
        <hr>
        {# <img src = "{{ asset('uploads/main_pictures/' ~ vandalism.mainPicture) }}" style="width: 400px; height: 400px; object-fit: cover" alt="photographie de la station montrant un vélo vandalisé"> #}
        <img src = "{{ vandalism.mainPicture }}" style="width: 100%; height: 100%; object-fit: cover" alt="photographie de la station montrant un vélo vandalisé">
        <hr>
        {% endif %}
    </ul>

    <a href="{{ path('app_vandalism_edit', {'id': vandalism.id}) }}"><button class="btn btn-lg btn-success" type="submit">modifier le vandalime</button></a>
    <a href="{{ path('app_vandalism_index') }}"><button class="btn btn-lg btn-primary" type="submit">retour à la liste des vandalimes</button></a>
    {{ include('vandalism/_delete_form.html.twig') }}
</div>
{% endblock %}
