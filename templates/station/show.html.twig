{% extends 'base.html.twig' %}
{% block title %}Administrer la station{% endblock %}

{% block body %}
<div class="container"> 
    <h1>Station</h1>
    <h3><a href="{{ path('app_station_index') }}">retour à l'administration des stations</a></h3>
    <h5><a href="{{ path('app_station_edit', {'id': station.id}) }}">modifier la station</a></h5>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ station.id }}</td>
            </tr> #}
            <tr>
                <th>Status</th>
                <td>{{ station.status ? 'Activé' : 'Désactivé' }}</td>
            </tr>
            <tr>
                <th>Ordre sur la tournée</th>
                <td>N° {{ station.tourOrder }}</td>
            </tr>
            {# <tr>
                <th>Reference</th>
                <td>{{ station.reference }}</td>
            </tr> #}
            <tr>
                <th>Nom</th>
                <td>{{ station.name }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ station.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ station.zip }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ station.city }}</td>
            </tr>
            {# <tr>
                <th>Lat</th>
                <td>{{ station.lat }}</td>
            </tr> #}
            {# <tr>
                <th>Lng</th>
                <td>{{ station.lng }}</td>
            </tr> #}
            {# <tr>
                <th>Slug</th>
                <td>{{ station.slug }}</td>
            </tr> #}
            {# <tr>
                <th>CreatedAt</th>
                <td>{{ station.createdAt ? station.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr> #}
            <tr>
                <th>Dernière mise à jour</th>
                <td>{{ station.updatedAt ? station.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            {% if station.mainPicture %}
            <tr>
                <th>Image pricipale</th>
                <td>{{ station.mainPicture }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>
    {{ include('station/_delete_form.html.twig') }}
</div>
{% endblock %}
