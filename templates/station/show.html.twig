{% extends 'base.html.twig' %}
{% block title %}Station{% endblock %}

{% block body %}
<div class="container"> 
    <h1>Station</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ station.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ station.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TourOrder</th>
                <td>{{ station.tourOrder }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ station.reference }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ station.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ station.address }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ station.zip }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ station.city }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ station.lat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ station.lng }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ station.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ station.createdAt ? station.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ station.updatedAt ? station.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MainPicture</th>
                <td>{{ station.mainPicture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_station_index') }}">back to list</a>

    <a href="{{ path('app_station_edit', {'id': station.id}) }}">edit</a>

    {{ include('station/_delete_form.html.twig') }}
</div>
{% endblock %}
