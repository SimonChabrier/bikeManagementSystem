{% extends 'base.html.twig' %}

{% block title %}Bike{% endblock %}

{% block body %}
    <h1>Bike</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bike.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ bike.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ bike.lat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ bike.lng }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ bike.reference }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ bike.number }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ bike.rate }}</td>
            </tr>
            <tr>
                <th>PurchasedAt</th>
                <td>{{ bike.purchasedAt ? bike.purchasedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ bike.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ bike.createdAt ? bike.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ bike.updatedAt ? bike.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MainPicture</th>
                <td>{{ bike.mainPicture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bike_index') }}">back to list</a>

    <a href="{{ path('app_bike_edit', {'id': bike.id}) }}">edit</a>

    {{ include('bike/_delete_form.html.twig') }}
{% endblock %}
