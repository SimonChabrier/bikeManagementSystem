{% extends 'base.html.twig' %}

{% block title %}Balance{% endblock %}

{% block body %}
    <h1>Balance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ balance.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ balance.createdAt ? balance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ balance.updatedAt ? balance.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ balance.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_balance_index') }}">back to list</a>

    <a href="{{ path('app_balance_edit', {'id': balance.id}) }}">edit</a>

    {{ include('balance/_delete_form.html.twig') }}
{% endblock %}
