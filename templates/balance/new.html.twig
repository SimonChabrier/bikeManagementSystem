{% extends 'base.html.twig' %}

{% block title %}Déclarer un équilibrage{% endblock %}

{% block body %}
<div class="container"> 
    <h1>Déclarer une nouvel équilibrage</h1>
      {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {{ include('balance/_form.html.twig') }}
    <a href="{{ path('app_balance_index') }}"><button class="btn btn-lg btn-primary" type="submit">Retour à la liste des équilibrages</button></a>
{% endblock %}
